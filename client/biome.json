{
	"$schema": "../node_modules/@biomejs/biome/configuration_schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		},
		"enabled": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": ["src/**", "!src/components/ui", "!src/routeTree.gen.ts"]
	},
	"formatter": {
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 120
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"root": false
}
