apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  labels:
    app.kubernetes.io/name: chat-app
type: Opaque
stringData:
  POSTGRES_PASSWORD: ${DB_PASSWORD:-password}
  DB_PASSWORD: ${DB_PASSWORD:-password}
  JWT_SECRET: ${JWT_SECRET:-your-jwt-secret-here}
  DB_URL: ${DATABASE_URL:-postgres://username:password@db:5432/chatapp}
---
apiVersion: v1
kind: Secret
metadata:
  name: azure-secrets
  labels:
    app.kubernetes.io/name: chat-app
type: Opaque
stringData:
  AZURE_API_KEY: ${AZURE_API_KEY:-your-azure-api-key}
  AZURE_OPENAI_API_ENDPOINT: ${AZURE_OPENAI_API_ENDPOINT:-https://your-endpoint.openai.azure.com/}
  AZURE_DEPLOYMENT_NAME: ${AZURE_DEPLOYMENT_NAME:-gpt-4}
  AZURE_RESOURCE_NAME: ${AZURE_RESOURCE_NAME:-your-resource-name}
  SERPER_API_KEY: ${SERPER_API_KEY:-your-serper-api-key}