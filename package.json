{
	"author": {
		"name": "Rohan Pradev"
	},
	"dependencies": {
		"ai": "^5.0.30",
		"zod": "^4.1.5"
	},
	"description": "A chat application built with Bun, React, and Zod.",
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"rimraf": "^6.0.1"
	},
	"name": "chat-app",
	"private": true,
	"scripts": {
		"app:health": "bash scripts/health-check.sh",
		"app:start": "bash scripts/start-app.sh",
		"check": "bunx --bun biome check --write --unsafe",
		"clean": "rimraf node_modules bun.lock",
		"format": "bunx --bun biome format --write",
		"k8s:deploy": "kubectl apply -k k8s/overlays/development",
		"k8s:status": "kubectl get all -n chat-app",
		"k8s:validate": "kubectl apply --dry-run=client --validate=false -k k8s/base",
		"lint": "bunx --bun biome lint",
		"start": "bun run --filter '*' dev"
	},
	"type": "module",
	"workspaces": [
		"server",
		"client",
		"shared"
	]
}
