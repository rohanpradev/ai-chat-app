# Server environment variables template
# Copy this file to .env.docker and update ALL values below
# All values are REQUIRED unless marked as optional

# Server configuration
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# Database configuration - ALL REQUIRED
DB_PASSWORD=your_db_password_here
DB_USER=postgres
DB_HOST=db
DB_PORT=5432
DB_NAME=chatapp
DB_URL=postgres://postgres:your_db_password_here@db:5432/chatapp

# Redis configuration - REQUIRED
REDIS_URL=redis://redis:6379

# Azure AI Foundry - ALL REQUIRED for AI features
AZURE_API_KEY=your_azure_api_key_here
AZURE_OPENAI_API_ENDPOINT=https://your-resource.openai.azure.com/openai/deployments/your-deployment/chat/completions?api-version=2025-04-16
AZURE_DEPLOYMENT_NAME=your_deployment_name
AZURE_RESOURCE_NAME=your_resource_name

# JWT configuration - REQUIRED (Generate a secure 32+ character string)
JWT_SECRET=your_jwt_secret_32_chars_minimum_here

# Client URL for CORS - REQUIRED
CLIENT_URL=http://localhost

# API configuration - REQUIRED
BASE_API_SLUG=api

# Docker/Traefik configuration - ALL REQUIRED
DOMAIN=localhost
ACME_EMAIL=admin@localhost
TRAEFIK_LOG_LEVEL=INFO
TRAEFIK_AUTH=admin:$2y$10$92IXUNpkjO0rOQ5byMi.Ye4oKoEa3Ro9llC/.og/at2.uheWG/igi

# Monitoring configuration - REQUIRED if using monitoring profile
GRAFANA_PASSWORD=admin123
