# Complete environment configuration for Chat App

# Server configuration
SERVER_PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Database configuration
DB_PASSWORD=your_db_password_here
DB_USER=your_db_user_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chatapp
DB_URL=postgres://username:password@localhost:5432/chatapp

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# Azure AI Foundry (Required for AI features)
AZURE_API_KEY="your_azure_api_key_here"
AZURE_RESOURCE_NAME="your_azure_resource_name_here"

# JWT configuration (Generate a secure 32+ character string)
JWT_SECRET=your_secure_jwt_secret_here_min_32_characters

# CORS configuration
CLIENT_URL=http://localhost:5173

# API configuration
BASE_API_SLUG=api

# Client configuration (for Vite build)
VITE_API_URL=/api
VITE_DEV_MODE=true
VITE_APP_NAME="Chat App"
VITE_APP_VERSION=1.0.0

# Infrastructure configuration
DOMAIN=localhost
ACME_EMAIL=your_email@example.com
TRAEFIK_LOG_LEVEL=INFO
TRAEFIK_AUTH=admin:your_hashed_password_here

# Monitoring configuration
GRAFANA_PASSWORD=your_grafana_password_here